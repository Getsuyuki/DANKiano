<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".PianoMain">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button class="pianokeywhite" style="@style/pianokeywhite"
        android:id="@+id/button"
        android:layout_alignTop="@+id/button2"
        android:layout_toRightOf="@+id/button2"
        android:layout_toEndOf="@+id/button2"
        android:onClick="onTouch1" ></Button>

    <Button class="pianokeywhite" style="@style/pianokeywhite"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView"
        android:id="@+id/button10"></Button>

    <Button class="pianokeywhite" style="@style/pianokeywhite"
        android:id="@+id/button5"
        android:layout_toRightOf="@+id/textView"
        android:layout_toEndOf="@+id/textView"></Button>

    <Button class="pianokeywhite" style="@style/pianokeywhite"
        android:id="@+id/button4"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button5"
        android:layout_toEndOf="@+id/button5"></Button>

    <Button class="pianokeywhite" style="@style/pianokeywhite"
        android:id="@+id/button3"
        android:layout_alignTop="@+id/button4"
        android:layout_toRightOf="@+id/button4"
        android:layout_toEndOf="@+id/button4"></Button>

    <Button class="pianokeywhite" style="@style/pianokeywhite"
        android:id="@+id/button2"
        android:layout_alignTop="@+id/button3"
        android:layout_toRightOf="@+id/button3"
        android:layout_toEndOf="@+id/button3"></Button>
    <Button style= "@style/pianokeywhite"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/button"
        android:layout_toEndOf="@+id/button"></Button>
    <Button class="pianokeyblack" style="@style/pianokeyblack"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/button5"
        android:layout_toStartOf="@+id/button5"
        android:id="@+id/button11"></Button>

    <Button class="pianokeyblack" style="@style/pianokeyblack"
        android:id="@+id/button7"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_toLeftOf="@+id/button2"
        android:layout_toStartOf="@+id/button2"></Button>
    <Button class="pianokeyblack" style="@style/pianokeyblack"
        android:id="@+id/button9"
        android:layout_alignBaseline="@+id/button7"
        android:layout_alignBottom="@+id/button7"
        android:layout_toLeftOf="@+id/button"
        android:layout_toStartOf="@+id/button"></Button>
    <Button class="pianokeyblack" style="@style/pianokeyblack"
        android:id="@+id/button6"
        android:layout_alignBaseline="@+id/button11"
        android:layout_alignBottom="@+id/button11"
        android:layout_toLeftOf="@+id/button4"
        android:layout_toStartOf="@+id/button4"></Button>
    <Button style="@style/pianokeyblack"
        android:layout_alignTop="@+id/button9"
        android:layout_alignRight="@+id/button"
        android:layout_alignEnd="@+id/button"
        android:id="@+id/button8"></Button>
</RelativeLayout>
